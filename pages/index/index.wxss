.content{
    width: 100%;
    height: 100vh;

    margin: 30rpx 0px 0px 0px ;
    position: relative;
    background-color: #eee;
}
.left-content{
    display: inline-block;
    width: 60%;
    height: 91vh;
    vertical-align: top;

}
.image-view{
    width: 98%;
    height: 50vh;
    border: 1px solid;
    background-size: 100% auto;
    background-repeat: no-repeat;
    position: relative;
    /* background-image: ; */
}
.image-view .page-num{
    position: absolute;
    top: 0;
    left: 0;
    width: 15%;
    height: 5%;
    background-color: red;
    color: white;
    font-size: 20rpx;
}
.clicked{
    border-color: red !important;
}
.right-content{
    display: inline-block;
    width: 30%;
    height: 91vh;
    margin-left: 8%;
    border: 1px solid;
}
.bottom{
    height: 80rpx;
    line-height: 80rpx;
    position: absolute;
    bottom: 0;
    right: 0;
    left: 0;
}
.page-control{
    border: 1px solid #eee !important;
}
.page-dec{
    float: right;
}
.page-inc{
    float: left;
}
.tabbar{
    height: 100rpx;
    line-height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
}
.tabbar-item{
    flex:1;
    background-color: white;
    font-size: 23rpx;
    text-align: center;
    cursor: pointer;
    
}
.tabbar-item image{
    display: block;
    width: 40rpx;
    margin: 10rpx auto;
}
.tabbar-item text{
    display: block;
    margin-top: -30rpx;
}
.tabbar-item button{
    border: none;
    display: block;
    background-color: #FF6347;
    font-size: 23rpx !important;
    color: white;
    width: 100%;
    height: 100%;
}
.tabbar-item button text{
    margin-top: 5px;
}
.share{
    background-color: #FF6347;
}